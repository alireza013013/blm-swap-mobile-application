<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/mainConstraintCardToken"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/background_card_token"
        android:layout_marginBottom="10dp"
        android:paddingStart="15dp"
        android:paddingEnd="15dp">

        <ImageView
            android:id="@+id/imageToken"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/ic_bnb"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/symbolToken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ADA"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            android:layout_marginStart="10dp"
            app:layout_constraintBottom_toTopOf="@+id/nameToken"
            app:layout_constraintStart_toEndOf="@+id/imageToken"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/nameToken"
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="Cardano Token"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginBottom="16dp"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@+id/symbolToken"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageToken" />


        <ImageView
            android:id="@+id/imageChainToken"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_bnb"
            android:layout_marginEnd="60dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <ImageView
            android:id="@+id/whiteStarFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_favorite_stars_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/goldenStarFavorite"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/golden_favorite_stars_circle"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:visibility="gone"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>